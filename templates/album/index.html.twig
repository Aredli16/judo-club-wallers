{% extends 'base.html.twig' %}

{% block title %}Photos{% endblock %}
{% block meta_description %}Vous y trouverez tous les albums photos du club de judo.{% endblock %}
{% block meta %}
    <meta property="og:locale" content="fr_FR">
    <meta property="og:type" content="album">
    <meta property="og:title" content="Photos">
    <meta property="og:description" content="Vous y trouverez tous les albums photos du club de judo.">
    <meta property="og:site_name" content="Judo Club Wallers">
    <meta property="og:url"
          content="{{ path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params')) }}">
{% endblock %}
{% block body %}
    <section class="relative h-[350px] bg-blend-darken text-white"
             style="background: rgba(0,0,0,0.9) url('{{ asset('images/header-2.jpg') }}') no-repeat center; background-size: cover">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
            <h1>Photos</h1>
            <ul class="flex justify-center">
                <li class="text-gray-300"><a class="after:content-['/'] after:mx-3" href="{{ path('app_home') }}">Accueil</a>
                </li>
                <li>Photos</li>
            </ul>
        </div>
    </section>

    <section class="container">
        <div class="gallery grid grid-cols-4 gap-3 max-md:grid-cols-2">
            {% for album in albums %}
                <a class="album-item" href="{{ path('app_show.album', {slug: album.slug}) }}">
                    <img src="{{ asset('uploads/media/albums/content/' ~ album.content.get(0).filename) }}"
                         alt="album-{{ album.title }}">
                    <p>{{ album.title }}</p>
                </a>
            {% endfor %}
        </div>
        {{ knp_pagination_render(albums) }}
    </section>
{% endblock %}
