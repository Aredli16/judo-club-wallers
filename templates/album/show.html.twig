{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ album.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ album.title }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ album.slug }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ album.createdAt ? album.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_album_index') }}">back to list</a>

    <a href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>

    {{ include('album/_delete_form.html.twig') }}


    {% for photo in album.photos %}
        <img src="{{ asset('uploads/media/images/' ~ photo.getName ) }}" alt="">
    {% endfor %}
{% endblock %}
