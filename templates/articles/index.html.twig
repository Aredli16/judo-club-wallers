{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}

		.container {
			cursor: pointer;
			margin: 50px
		}

		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

    <a href={{path('new.article')}}>
					<h1>Ajouter un article</h1>
	</a>
	<div class="example-wrapper">
		{% for article in articles %}
			<div class="container">
				<a href={{path('show.article', {'slug': article.getSlug()})}}>
					<h1>Titre:{{article.getTitle()}}</h1>
				</a>
				<p>Content :
					{{article.getContent()}}</p>
				<h2>Authors:
					{{article.getAuthor()}}</h2>
				<h3>created at:
					{{article.getCreatedAt().format('d-m-Y Ã  H:i')}}</h3>
				<h4>slug:{{article.getSlug()}}</h4>
				<h4>image:{{article.getImage()}}</h4>
			</div>
            <form method="post" action="{{ path('delete.article', {'slug': article.getSlug()}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
				<button class="btn">Delete</button>
			</form>
            <a href={{path('edit.article', {'slug': article.getSlug()})}}>Modifier</a>
			<hr>
		{% endfor %}
	</div>
{% endblock %}
