{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .container {
        cursor: pointer;
        margin: 50px
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    {% for article in articles %}
    <a href={{path('show.article', {'id': article.getId()})}}>
        <div class="container">
            <h1>Titre:{{article.getTitle()}}</h1>
            <h1>Content : {{article.getContent()}}</h1>
            <h2>Authors: {{article.getAuthor()}}</h2>
            <h3>created at: {{article.getCreatedAt().format('d-m-Y Ã  H:i')}}</h3>
            <h4>slug:{{article.getSlug()}}</h4>
            <h4>image:{{article.getImage()}}</h4>
        </div>
    </a>
    <hr>

    {% endfor %}
</div>
{% endblock %}